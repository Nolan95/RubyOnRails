<h1>Liste des categories</h1>

<table class="table">
  <thead>
    <tr>
      <td>ID</td>
      <td>Title</td>
      <td>Description</td>
      <td>Actions</td>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |cat| %>
      <tr>
        <td><%= cat.id %></td>
        <td><%= cat.title %></td>
        <td><%= cat.description %></td>
        <td>
            <a href="<%= edit_category_path(cat.id) %>" class="btn btn-primary">Editer</a>
        </td>
        <td>
          <a href="<%= category_path(cat.id) %>" class="btn btn-danger" data-confirm = "Voulez vous vraiment suppromer cette categorie ?" data-method="DELETE">
            Supprimer</a>
        </td>
      </tr>
    <% end %>
  </tbody>

</table>

<p>

  <a href="<%= new_category_path %>" class="btn btn-success">Creer une categorie</a>

</p>
